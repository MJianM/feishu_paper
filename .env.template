# ArXiv 论文同步系统环境变量配置模板
# 复制此文件为 .env 并填写实际值

# ================================
# 飞书配置（必填）
# ================================
FEISHU_APP_ID=cli_xxxxxxxxxxxxxxxxx
FEISHU_APP_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
FEISHU_BITABLE_APP_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# 飞书访问令牌（二选一或都填）
FEISHU_USER_ACCESS_TOKEN=u-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
FEISHU_TENANT_ACCESS_TOKEN=t-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ================================
# 高级飞书配置（可选）
# ================================

# 表格ID配置（如果需要使用特定表格）
# FEISHU_PAPERS_TABLE_ID=tblxxxxxxxxxxxxxxxxx
# FEISHU_RELATIONS_TABLE_ID=tblxxxxxxxxxxxxxxxxx

# Wiki配置（如果使用Wiki模式）
# FEISHU_WIKI_SPACE_TOKEN=BR1CwZrcaiFyYfkUEMEcZ6aunMj
# FEISHU_PAPERS_NODE_TOKEN=
# FEISHU_RELATIONS_NODE_TOKEN=

# ================================
# 同步配置（可选）
# ================================

# 同步间隔（秒），默认86400（1天）
SYNC_INTERVAL=86400

# 日志级别：DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# 时区设置
TZ=Asia/Shanghai

# 启动时是否立即执行一次同步
IMMEDIATE_RUN=true

# 是否备份配置文件
BACKUP_CONFIGS=true

# ================================
# ArXiv API 配置（可选）
# ================================

# ArXiv API 请求间隔（秒）
ARXIV_API_DELAY=3

# ArXiv API 最大重试次数
ARXIV_API_MAX_RETRIES=3

# ================================
# 文件路径配置（可选）
# ================================

# 下载目录
DOWNLOAD_DIR=downloads

# 日志目录
LOG_DIR=logs

# 备份目录
BACKUP_DIR=backup

# ================================
# 使用说明
# ================================
# 1. 复制此文件为 .env：cp .env.template .env
# 2. 编辑 .env 文件，填入实际配置值
# 3. 从飞书开放平台获取应用配置：https://open.feishu.cn/
# 4. 创建多维表格并获取 app_token
# 5. 运行 python setup_feishu.py 进行初始化
